{
  "name": "laravel-blade-template-standalone",
  "version": "1.0.0",
  "description": "An advanced environment to design, preview, and validate Blade templates outside of Laravel, with maximum compatibility and portability for seamless migration to real Laravel projects.",
  "main": "index.js",
  "homepage": "https://github.com/bakiro/LaravelBladeTemplateStandalone",
  "author": "Gerardo Cignarella <cignarella.gerardo@gmail.com> (https://github.com/bakiro)",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "browsersync": "node browsersync.js",
    "dev:full": "node dev.js",
    "watch:build": "chokidar 'src/resources/js/**/*.js' 'src/resources/css/**/*.css' -c 'npm run build'",
    "lint:js": "eslint src/resources/js --ext .js",
    "format:js": "prettier --write src/resources/js/**/*.js",
    "lint:css": "stylelint src/resources/css/**/*.css",
    "format:css": "stylelint src/resources/css/**/*.css --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:php": "vendor/bin/phpcs src/resources/views src/resources/js src/resources/css public/index.php",
    "fix:php": "vendor/bin/phpcbf src/resources/views src/resources/js src/resources/css public/index.php",
    "phpstan": "vendor/bin/phpstan analyse src/resources/js src/resources/css public/index.php",
    "copy:images": "npx chokidar 'src/resources/images/**/*' -c 'npm run copy:images:once'",
    "copy:images:once": "npx cpy 'src/resources/images/**/*' public/images --parents",
    "copy:fonts": "npx chokidar 'src/resources/fonts/**/*' -c 'npm run copy:fonts:once'",
    "copy:fonts:once": "npx cpy 'src/resources/fonts/**/*' public/fonts --parents",
    "copy:assets": "npm run copy:images:once && npm run copy:fonts:once"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/bakiro/LaravelBladeTemplateStandalone/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "browser-sync": "^3.0.4",
    "chokidar-cli": "^3.0.0",
    "cpy": "^12.1.0",
    "eslint": "^9.39.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}